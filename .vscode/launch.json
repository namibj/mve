    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MVE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/apps/umve/umve",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "linux":
            {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": 
                [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
            },
            "preLaunchTask": "make umve"
        }
    ]
}